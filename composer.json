{
    "name": "mgatner/nexus",
    "type": "project",
    "description": "Heroes of the Storm Simulator",
    "homepage": "https://nexus.tat.red/",
    "license": "MIT",
	"minimum-stability": "dev",
	"prefer-stable": true,
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/codeigniter4/codeigniter4"
        },
        {
            "type": "vcs",
            "url": "https://github.com/MGatner/heroes-data"
        },
		{
			"type": "composer",
			"url": "https://asset-packagist.org"
		}
    ],
   "require": {
        "php": ">=7.2",
        "codeigniter4/codeigniter4": "dev-develop",
        "heroestoolchest/heroes-data": "dev-nexus",
		"fortawesome/font-awesome": "^5.8",
		"twbs/bootstrap": "^4.3",
		"components/jquery": "^3.3",
        "tatter/assets": "^2.1",
        "tatter/alerts": "^2.0",
        "tatter/themes": "^1.0",
        "tatter/visits": "^1.1"
    },
    "require-dev": {
        "mikey179/vfsstream": "1.6.*",
		"mockery/mockery": "^1.0",
        "phpunit/phpunit": "^9.5",
		"fzaninotto/faker": "^1.9@dev"
    },
	"autoload-dev": {
		"psr-4": {
			"ProjectTests\\Support\\": "tests/_support"
		}
	},
	"scripts": {
		"test": "phpunit",
		"post-update-cmd": [
			"composer dump-autoload"
		]
	}
}
